@model List<Product>
@{
    ViewData["Title"] = "Index";
    int TableNo = 1;
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Product List</h6>
        <a asp-action="Create" asp-controller="Product" class="btn btn-outline-primary ml-auto">Create</a>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Image</th>
                    <th scope="col">Category</th>
                    <th scope="col">CostPrice</th>
                    <th scope="col">SellPrice</th>
                    <th scope="col">Discount</th>
                    <th scope="col">Stock count</th>
                    <th colspan="3" scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(TableNo++)</td>
                        <td>@item.Name </td>
                        <td>
                            <img src="~/imgs/products/@item.CoverImage" width="50"/>

                        </td>
                        <td>@item.Category?.Name</td> 
                        <td>@item.CostPrice</td>
                        <td>@item.SellPrice</td>
                        <td>@item.Discount</td>
                        <td>@item.Quantity</td>
                        <td>
                            <a class="btn btn-success" asp-action="Update" asp-controller="Product" asp-route-id="@item.Id">Update</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id">Delete</a>
                        </td>

                    </tr>


                }


            </tbody>
        </table>

    </div>
</div>



