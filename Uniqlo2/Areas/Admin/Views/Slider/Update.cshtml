@model Uniqlo2.ViewModels.Slider.SliderCreateVM
@{
    ViewData["Title"] = "Update";

}


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Update Slider</h6>
        <a asp-action="Index" asp-controller="Slider" class="btn btn-outline-primary ml-auto">Return list</a>
    </div>
    <div class="card-body">
        <form asp-action="Update" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" id="Title" name="Title" value="@Model.Title" class="form-control">
                <span asp-validation-for="Title" class="text-small text-danger "></span>
            </div>
             
            <div class="form-group">
                <label asp-for="Subtitle"></label>
                <input asp-for="Subtitle" id="Subtitle" name="Subtitle" value="@Model.Subtitle" class="form-control">
                <span asp-validation-for="Subtitle" class="text-small text-danger "></span>
            </div>



            <div class="form-group">
                <label asp-for="Link"></label>
                <input asp-for="Link" class="form-control">
                <span asp-validation-for="Link" id="Link"  class="text-small text-danger "></span>
            </div>
            <div class="form-group">
                <label asp-for="File"></label>
                <input asp-for="File" class="form-control">
                <span asp-validation-for="File" id="File" class="text-small text-danger "></span>
            </div>
           
            
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>



